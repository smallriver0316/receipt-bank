{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "next"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi":"error",
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "no-multi-spaces": ["error"],
        "arrow-body-style": ["error", "as-needed"]
    }
}
